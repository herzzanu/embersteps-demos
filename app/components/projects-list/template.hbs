<ul class="list-unstyled">
  {{#each this.projects as |project|}}
    <li class="d-flex justify-content-between align-items-center bg-light mb-3 px-3 py-3">
      <div class="pull-left">
        <LinkTo @route="projects.project" @model={{project}}>
          {{project.name}} #{{project.id}}
        </LinkTo>
      </div>
      <div class="pull-right">
        {{project.user.fullName}}
      </div>
    </li>
  {{/each}}
</ul>